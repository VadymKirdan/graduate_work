<p id="notice"><%= notice %></p>

<h1>Listing All Salaries</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>User</th>
      <th>Current Balance</th>
      <th>Total Balance</th>
    </tr>
  </thead>

  <tbody>
    <% @salaries.each do |salary| %>
      <tr>
        <td><%= salary.user.first_name %> <%= salary.user.last_name %></td>
        <td><%= salary.current_balance %></td>
        <td><%= salary.total_balance %></td>
      </tr>
    <% end %>
    <%= bar_chart Salary.group(:current_balance).sum(:current_balance) %>
  </tbody>
</table>