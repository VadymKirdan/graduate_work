<p id="notice"><%= notice %></p>

<h1>Listing My Reports</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Comment</th>
      <th>Project</th>
      <th>Date</th>
      <th>Start Time</th>
      <th>End Time</th>
      <th>Total Time</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.comment %></td>
        <td><%= report.project.name %></td>
        <td><%= report.date %></td>
        <% if report.time_start %>
          <td><%= report.time_start.hour %> : <%= report.time_start.min %></td>
        <% else %>
          <td>=//=</td>
        <% end %>
        <% if report.time_end %>
          <td><%= report.time_end.hour %> : <%= report.time_end.min%></td>
        <% else %>
          <td>=//=</td>
        <% end %>
        <% if report.total_time %>
          <td><%= report.total_time %> hr</td>
        <% else %>
          <td>=//=</td>
        <% end %>
        <td><%= link_to 'Show', report %></td>
        <td><%= link_to 'Edit', edit_report_path(report) %></td>
        <td><%= link_to 'Destroy', report, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

