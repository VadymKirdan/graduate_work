<h1>Users</h1>
<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Surname</th>
      <th>Email</th>
      <th>Role</th>
      <% if current_user.id == 1%>
        <th>Change role</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.role.name%></td>
        <% if current_user.id == 1%>
          <% if user.role_id == 3%>
            <td class="btn-primary"><%= link_to 'Make Admin', { :action => "make_admin", :controller => "users", :user_id => user.id},  method: :post %></td>
          <% elsif user.role_id == 2 %>
            <td class="btn-primary"><%= link_to 'Make User', { :action => "back_to_user", :controller => "users", :user_id => user.id},  method: :post %></td>
          <% elsif user.id == 1 %>
            <td class="btn-warning">Main Admin</td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

