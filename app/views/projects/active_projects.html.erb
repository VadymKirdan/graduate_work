<p id="notice"><%= notice %></p>

<h1>Listing Projects</h1>

<ul class="nav navbar-nav">
  <li><%= link_to 'All Projects', { :action => "index", :controller => "projects"}%></li>
  <li><%= link_to 'Active Projects', { :action => "active_projects", :controller => "projects"},  method: :post %></li>
  <li><%= link_to 'Unactive projects', { :action => "unactive_projects", :controller => "projects"},  method: :post %></li>
</ul>
<br><br><br>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Status</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.status %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', project %></td>
        <% if can? :update, project %>
          <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <% end %>
        <% if can? :destroy, project %>
          <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

